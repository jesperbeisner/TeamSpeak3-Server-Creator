{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card card-blue">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover text-center">
                            <thead>
                            <tr>
                                <th scope="col">Port</th>
                                <th scope="col">Status</th>
                                <th scope="col">Created</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for server in servers %}
                                <tr id="row-{{ server.port }}">
                                    <th scope="row" class="port-data">
                                        {{ server.port }}
                                    </th>

                                    <td class="status-icon-data">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                             fill="currentColor"
                                             class="bi bi-dash-circle-fill text-danger offline-icon {{ server.containerCreated == null ? '' : 'd-none' }}"
                                             viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7z"/>
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                             fill="currentColor"
                                             class="bi bi-check-circle-fill text-success online-icon {{ server.containerCreated == null ? 'd-none' : '' }}"
                                             viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                        </svg>
                                    </td>

                                    <td class="created-data">
                                        {{ server.containerCreated == null ? '-' : server.containerCreated|date("d.m.Y H:i:s") }}
                                    </td>

                                    <td class="button-data">
                                        <button class="btn {{ server.containerCreated == null ? 'btn-success server-create-button' : 'btn-danger server-remove-button' }}"
                                                data-server-port="{{ server.port }}">
                                            {{ server.containerCreated == null ? 'Create Server' : 'Remove Server' }}
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}